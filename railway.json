{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["portfolio-manager/**", "frontend/**", "nixpacks.toml"]
  },
  "deploy": {
    "startCommand": "java -jar portfolio-manager/target/portfolio-manager.jar",
    "restartPolicyType": "ON_FAILURE",
    "healthCheckPath": "/api/stocks"
  }
}
